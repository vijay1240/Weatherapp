<div class="site-content">
  <div class="site-header">
    <div class="container">
      <a href="#" class="branding">
        <%= image_tag 'logo', class: 'logo' %>
        <div class="logo-type">
          <h1 class="site-title">Weather App</h1>
          <small class="site-description"></small>
        </div>
      </a>
      <div class="main-navigation">
       <button type="button" class="menu-toggle"><i class="fa fa-bars"></i></button>
       <ul class="menu">
         <li class="menu-item current-menu-item"><a href="#">Home</a></li>
         <li class="menu-item"><a href="#">News</a></li>
         <li class="menu-item"><a href="#">Live cameras</a></li>
         <li class="menu-item"><a href="#">Photos</a></li>
         <li class="menu-item"><a href="#">Contact</a></li>
       </ul>
      </div>
      <div class="mobile-navigation"></div>
    </div>
  </div>
  <div class="hero" data-bg-image="images/banner.png">
    <div class="container">
      <div class='row'>
        <div class='col-sm-6'>
          <select name="state", id='state-selection'>
            <% CS.states(:us).each do |key, value| %>
              <option value="<%= key %>"><%= value %></option>
            <% end %>
          </select>
        </div>
        <div class='col-sm-6 hide'>
          <select name="city" id='city-selection' class = 'hide'></select>
        </div>
      </div>
    </div>
  </div>
  <% forecast = Weather.get_weather_status('NewYork') %>
  <div class="forecast-info">
    <%= render 'forecast_info', forecast: forecast %>
  </div>
  <footer class="site-footer mt30">
    <div class="container">
      <div class="row">
        <div class="col-md-8 mt30">
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        </div>
        <div class="col-md-3 col-md-offset-1">
          <div class="social-links">
            <a href="#"><i class="fa fa-facebook"></i></a>
            <a href="#"><i class="fa fa-twitter"></i></a>
            <a href="#"><i class="fa fa-google-plus"></i></a>
            <a href="#"><i class="fa fa-pinterest"></i></a>
          </div>
        </div>
      </div>
    </div>
  </footer> <!-- .site-footer -->
</div>
